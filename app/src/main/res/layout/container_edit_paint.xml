<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clipChildren="false">

  <ImageButton
    android:id="@+id/buttonBack"
    android:layout_width="@dimen/img_tool_size"
    android:layout_height="@dimen/img_tool_size"
    android:layout_marginStart="@dimen/img_undo_m_start"
    android:layout_marginTop="@dimen/img_tool_m_top"
    android:background="@drawable/bg_round"
    android:padding="@dimen/img_tool_padding"
    android:visibility="invisible"
    app:srcCompat="@drawable/ic_undo"/>

  <com.arsvechkarev.letta.views.VerticalSeekbar
    android:id="@+id/verticalSeekbar"
    android:layout_width="30dp"
    android:layout_height="240dp"
    android:layout_gravity="center_vertical"
    android:visibility="invisible"/>

  <com.arsvechkarev.letta.views.GradientPalette
    android:id="@+id/palette"
    android:layout_width="30dp"
    android:layout_height="200dp"
    android:layout_gravity="center_vertical|end"
    android:padding="6dp"
    android:visibility="invisible"/>

</FrameLayout>