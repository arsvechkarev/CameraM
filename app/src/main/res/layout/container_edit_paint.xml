<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clipChildren="false">

  <com.arsvechkarev.letta.views.ShowerCircle
    android:id="@+id/showCircle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

  <ImageButton
    android:id="@+id/buttonUndo"
    android:layout_width="@dimen/img_tool_size_small"
    android:layout_height="@dimen/img_tool_size_small"
    android:layout_marginEnd="@dimen/img_tool_m_end"
    android:background="@drawable/bg_round_transparent"
    android:padding="@dimen/img_tool_padding"
    android:visibility="invisible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_undo"/>

  <ImageButton
    android:id="@+id/buttonEraser"
    android:layout_width="@dimen/img_tool_size_small"
    android:layout_height="@dimen/img_tool_size_small"
    android:layout_gravity="end"
    android:layout_marginTop="@dimen/img_tool_m_top"
    android:layout_marginEnd="@dimen/img_tool_m_end"
    android:background="@drawable/bg_round_transparent"
    android:padding="@dimen/img_tool_padding"
    android:visibility="invisible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/buttonUndo"
    android:src="@drawable/ic_eraser"/>

  <com.arsvechkarev.letta.views.VerticalSeekbar
    android:id="@+id/verticalSeekbar"
    android:layout_width="30dp"
    android:layout_height="240dp"
    android:layout_gravity="center_vertical"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <com.arsvechkarev.letta.views.GradientPalette
    android:id="@+id/palette"
    android:layout_width="32dp"
    android:layout_height="230dp"
    android:layout_gravity="center_vertical|end"
    android:layout_marginEnd="16dp"
    android:padding="8dp"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>