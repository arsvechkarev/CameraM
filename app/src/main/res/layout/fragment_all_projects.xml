<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background">

  <com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.CollapsingToolbarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_scrollFlags="scroll">

      <com.arsvechkarev.letta.views.HeaderFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.arsvechkarev.letta.views.GradientHeaderView
          android:layout_width="match_parent"
          android:layout_height="180dp"
          android:layout_gravity="center"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginBottom="12dp"
          android:fontFamily="@font/rubik_medium"
          android:text="All projects"
          android:textColor="@color/text_header"
          android:textSize="@dimen/text_h0"/>

      </com.arsvechkarev.letta.views.HeaderFrameLayout>

    </com.google.android.material.appbar.CollapsingToolbarLayout>

  </com.google.android.material.appbar.AppBarLayout>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerAllProjects"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>

  <com.arsvechkarev.letta.views.ProgressBar
    android:id="@+id/projectsLoadingProgressBar"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_gravity="center"
    app:color="@color/primary"/>

  <com.arsvechkarev.letta.views.Image
    android:id="@+id/buttonNewProject"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_gravity="end|bottom"
    android:layout_margin="16dp"
    android:padding="8dp"
    app:backgroundColor="@color/primary"
    app:imageSrc="@drawable/ic_new_project"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>