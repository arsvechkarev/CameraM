<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/editRoot"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clipChildren="false">

  <ImageView
    android:id="@+id/bgImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <com.arsvechkarev.letta.views.DrawingCanvas
    android:id="@+id/drawingCanvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"/>

  <com.arsvechkarev.letta.views.ViewPort
    android:id="@+id/viewPort"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/img_tool_m_end"
    android:clipChildren="false"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.arsvechkarev.letta.views.SimpleImage
      android:id="@+id/buttonText"
      android:layout_width="@dimen/img_tool_size"
      android:layout_height="@dimen/img_tool_size"
      android:layout_marginTop="@dimen/img_tool_m_top_big"
      android:padding="@dimen/img_tool_padding"
      app:imageSrc="@drawable/ic_text"/>

    <com.arsvechkarev.letta.views.SimpleImage
      android:id="@+id/buttonPaint"
      android:layout_width="@dimen/img_tool_size"
      android:layout_height="@dimen/img_tool_size"
      android:layout_marginTop="@dimen/img_tool_m_top"
      android:padding="@dimen/img_tool_padding"
      app:imageSrc="@drawable/ic_paint"/>

    <com.arsvechkarev.letta.views.SimpleImage
      android:id="@+id/buttonStickers"
      android:layout_width="@dimen/img_tool_size"
      android:layout_height="@dimen/img_tool_size"
      android:layout_marginTop="@dimen/img_tool_m_top"
      android:padding="@dimen/img_tool_padding"
      app:imageSrc="@drawable/ic_stickers"/>

    <com.arsvechkarev.letta.views.SimpleImage
      android:id="@+id/buttonCrop"
      android:layout_width="@dimen/img_tool_size"
      android:layout_height="@dimen/img_tool_size"
      android:layout_marginTop="@dimen/img_tool_m_top"
      android:padding="@dimen/img_tool_padding"
      app:imageSrc="@drawable/ic_crop"/>

  </LinearLayout>

  <ImageButton
    android:id="@+id/buttonDone"
    android:layout_width="@dimen/img_done_size"
    android:layout_height="@dimen/img_done_size"
    android:layout_marginStart="@dimen/img_done_margin"
    android:layout_marginEnd="@dimen/img_done_margin"
    android:layout_marginBottom="@dimen/img_done_m_bottom"
    android:background="@drawable/bg_round_done"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:srcCompat="@drawable/ic_checkmark"/>

</androidx.constraintlayout.widget.ConstraintLayout>